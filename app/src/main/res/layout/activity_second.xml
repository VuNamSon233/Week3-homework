<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/paragraph_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:text="Đoạn văn"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/paragraph_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paragraph_textView"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="abc"
        android:inputType="text" />

    <Button
        android:id="@+id/corrected_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paragraph_editText"
        android:layout_centerHorizontal="true"
        android:text="ĐÃ SỬA BÀI" />

</RelativeLayout>